div
    .modal-header
        span.h5.modal-title #{message.passworddialogtitle}
        //span.pull-right
            button.btn.btn-box-tool(tabindex="6", type='button', ng-click='cancel()')
                i.fas.fa-times
    .modal-body
        ng-form(name="validate")
            .row
                .col-10.offset-1
                    .form-group
                        label.control-label(for="username") #{message.mail_field}
                        span.float-right(style="color:#FF7043;font-size:0.8rem;font-weight:700;" ng-messages="validate.username.$error")
                            span.error-message(ng-message="required") #{message.required}
                            span.error-message(ng-message="pattern") #{message.invalid_mail_format}
                            span.error-message(ng-message="maxlength") #{message.long}
                        input.form-control.no-zoom#username(tabindex="1", style="margin-bottom:1rem;", ng-model='items.username',ng-change="change()", type='email', name='username', placeholder='name@address', required, ng-maxlength="30", ng-pattern="/^[a-z0-9-._.+]+@[a-z0-9-]+(\.[a-z0-9-]+)*$/i")
                .col-10.offset-1
                    .form-group
                        label.control-label(for="password") New Password
                        //#{message.password_field}
                        span.float-right(style="color:#FF7043;font-size:0.8rem;font-weight:700;" ng-messages="validate.password.$error")
                            span.error-message(ng-message="required") #{message.required}
                            span.error-message(ng-message="minlength") #{message.short}
                            span.error-message(ng-message="maxlength") #{message.long}
                        input.form-control.no-zoom#password(tabindex="2", style="margin-bottom:1rem;", ng-model="items.password",ng-change="change()", type="password", name="password", placeholder=message.over4under30, required, ng-minlength="4", ng-maxlength="30")
                .col-10.offset-1
                    .form-group
                        label.control-label(for="retypepassword") #{message.retypepassword}
                        span.float-right(style="color:#FF7043;font-size:0.8rem;font-weight:700;" ng-messages="validate.retypepassword.$error")
                            span.error-message(ng-message="required") #{message.required}
                            span.error-message(ng-message="compareTo") #{message.password_missmatch}
                            span.error-message(ng-message="minlength") #{message.short}
                            span.error-message(ng-message="maxlength") #{message.long}
                        input.form-control.no-zoom#retypepassword(tabindex="3", ng-model="items.retypepassword",ng-change="change()", compare-to="items.password", type="password", name="retypepassword", placeholder=message.retypepassword, required, ng-minlength="4", ng-maxlength="30")
            .row
                .col-10.offset-1
                    .progress(ng-show="progress")
                        .progress-bar.progress-bar-striped.active(role="progressbar", aria-valuenow="100", aria-valuemin="0", aria-valuemax="100", style="width: 100%")

            .row
                .col-10.offset-1
                    include ../../../systems/common/error_message
    .modal-footer
        .row
            .col-12
                .text-center(style="margin:2rem;")
                    button.btn.btn-warning(tabindex="4", type="button", ng-click='cancel()', aria-label="") #{message.cancel}
                    button.btn.btn-primary(tabindex="5", type="button", ng-click='answer();validate.$dirty = false;', ng-disabled="progress || validate.$invalid", aria-label="") #{message.ok}

