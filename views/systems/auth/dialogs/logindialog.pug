div
    .modal-header
        span.h5.modal-title #{message.logindialogtitle}
        span.pull-right
            button.btn.btn-box-tool(type='button', ng-click='cancel()')
                i.fas.fa-times
    .modal-body
        ng-form(name="validate", ng-submit="answer(items)")
            .row
                .col-10.offset-1
                    .form-group
                        label.control-label(for="username") #{message.mail_field}
                        span.float-right(style="color:#FF7043;font-size:0.8rem;font-weight:700;" ng-messages="validate.username.$error")
                            //span.error-message(ng-message="required") #{message.required}
                            span.error-message(ng-message="maxlength") #{message.long}
                        input.form-control.no-zoom#username(tabindex="1", style="font-weight:500;", ng-model="items.username", data-ng-required="true", type='text', name="username", placeholder='xxxxxxx@xxx.co.jp', required, ng-maxlength="255")

                .col-10.offset-1
                    .form-group
                        label.control-label(for="password") #{message.password_field}
                        span.float-right(style="color:#FF7043;font-size:0.8rem;font-weight:700;" ng-messages="validate.password.$error")
                            //span.error-message(ng-message="required") #{message.required}
                            span.error-message(ng-message="minlength") #{message.short}
                            span.error-message(ng-message="maxlength") #{message.long}
                        input.form-control.no-zoom#password(tabindex="2", style="font-weight:500;", ng-model="items.password", type='password', name="password", placeholder='*******', required, ng-minlength="4", ng-maxlength="255", data-ng-required="true")

            .row
                .col-12
                    .progress(ng-show="progress")
                       .progress-bar.progress-bar-striped.active(role="progressbar", aria-valuenow="100", aria-valuemin="0", aria-valuemax="100", style="width: 100%")
            .row
                .col-12
                    include ../../../systems/common/error_message
    .modal-footer
        .row
            .col-12
                .text-center(style="margin:2rem;")
                    button.btn.btn-primary(tabindex="3", type="button", ng-click='answer(items);validate.$dirty = false;', style="margin:0.5rem;", ng-disabled="progress || validate.$invalid", aria-label="") #{message.ok}
                    if (config.facebook)
                        button.btn.btn-primary(tabindex="4", type="button", ng-click="go('/auth/facebook');", style="margin:0.5rem;background-color:#3B5998;", aria-label="")
                            i.fab.fa-facebook
                    if (config.twitter)
                        button.btn.btn-primary(tabindex="5", type="button", ng-click="go('/auth/twitter');", style="margin:0.5rem;background-color:#55acee;", aria-label="")
                            i.fab.fa-twitter-square
                    if (config.instagram)
                        button.btn.btn-primary(tabindex="6", type="button", ng-click="go('/auth/instagram');", style="margin:0.5rem;background-color:#3f729b;", aria-label="")
                            i.fab.fa-instagram
                    if (config.googleplus)
                        button.btn.btn-primary(tabindex="7", type="button", ng-click="go('/auth/googleplus');", style="margin:0.5rem;background-color:#dd4b39;", aria-label="")
                            i.fab.fa-google-plus
                    if (config.line)
                        button.btn.btn-primary(tabindex="8", type="button", ng-click="go('/auth/line');", style="margin:0.5rem;background-color:#1dcd00;", aria-label="")
                            i.fab.fa-empire